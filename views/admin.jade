extends layout

block content
	#admin.span12
		if locals.user && locals.user._type == 'writer'
			center
				h2 Hi, #{user.username}
			hr
			hr

			button.btn.span4.hide(data-toggle="modal", data-target="#user-modal") New User
			#user-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="newUser", aria-hidden="true")
				.modal-header
					button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
					h3#newUser New User
				.modal-body
					center
						input(name="username", placeholder="username", type="text")
						br
						input(name="password", placeholder="password", type="password")
						br
						input(type="checkbox", name="is_admin")
						span &nbsp; Admin?
						br
						button.btn Save