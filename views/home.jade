extends layout

block content
	.span12

		div.hide
			div#header.row
				div.header-items
					div
						img(src='img/pr_splash_logorightheader.png', 
							alt='PictureRead')
					div
						small= 'captures emotion'
					div
						small= 'tells stories'
					div
						small= 'engages with the world.'

		div#banner
			div.banner-image
				img.fade(src='img/pr_hero_image_splash2.png')

		div
			div.more-info
				form#info_form
					fieldset
						label= 'type your email address for updates'
						input(name='more_info', 
							type='email', 
							placeholder='email address')

						a(href='#')
							img(src='img/pr_splash_submitbutton.png')
							
						div.flash
						input.hide(type='submit')

		div#footer
			div.copyright
				small= '&copy; 2012 PictureRead'