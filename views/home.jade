extends layout

block content
	- var sections = collection.sections
	- var hl_class = ''
	.span12
		center
			hr(style="margin-top:1em; margin-bottom:0.3em;")
			.title
				span.caps SECTIONS

				span &nbsp;
				button.btn.btn-mini.hide.add-section
					i.icon-plus

				#section-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="newSection", aria-hidden="true")
					.modal-header
						button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
						h3#newSection New Section
					.modal-body
						center
							input(name="brand_name", placeholder="Brand Name", type="text")
							input(name="image", type="hidden")
							input(name="thumbnail", type="hidden")
							#section-drop Drag & Drop a Picture Here
							.pics
							br
							button.btn.save-section Save

			hr(style="margin-top:0.3em; margin-bottom:3em;")
			
			#sections
				include partials/sections

	.span12
		center
			hr(style="margin:1em auto 0.3em auto")
			.title
				span.caps STORIES

				span &nbsp;

				- if( collection.highlight )
					button.btn.btn-mini.hide.add-story
						i.icon-plus

					#story-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="newStory", aria-hidden="true")
						.modal-header
							button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
							h3#newStory New Story for #{collection.highlight}
						.modal-body
							center
								input(name="section", value="#{collection.highlight}", type="hidden")
								input(name="title", type="text", placeholder="Story Title")
								#story-drop.mult Drop pictures here one at a time
								.pics
								br
								button.save-story.btn Save

			hr(style="margin:0.3em")
			
			#stories
				include partials/stories