extends layout

block content
	#story.span12
		center
			h2 #{story.title}
		input(name="img", type="hidden", value="#{story.frames[frame-1].image}")
		.frame-nav
			span.nav-deco 
				b #{frame}
			span.nav-deco 
				b &plus;
			span.nav-deco
				if frame < 3
					- var next = parseInt(frame) + 1;
					a(href="/stories/#{story._id}/#{next}") &gt;
				else
					b &gt;
			span.nav-deco 
				if frame > 1
					- var last = parseInt(frame) - 1;
					a(href="/stories/#{story._id}/#{last}") &lt;
				else
					b &lt;
			span.nav-deco 
				b: em f
			span.nav-deco 
				b: em t
			span.nav-deco.chars
				img(src="/img/characters.png")
		#frame